---
type Props = {
  link: string;
  linkText: string;
  type?: "main" | "white";
  external?: boolean;
};

const { link, linkText, type = "main", external = false } = Astro.props;
---

<a
  href={link}
  target={external ? "_blank" : "_self"}
  class={`${type == "main" ? "btn-main-outline" : "btn-white-outline"} flex flex-row gap-1.5 justify-between`}
>
    <span class="my-auto">{linkText}</span>
    <span class="my-auto" set:html={external ? '&#8599;' : '&#8594;'} />
</a>
